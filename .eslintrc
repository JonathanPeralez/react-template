{
  "extends": ["plugin:react/recommended", "airbnb", "plugin:prettier/recommended", "prettier/react", "prettier/standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": ["prettier", "react"],
  "rules": {
    "prettier/prettier": "warn",
    "no-param-reassign": "off",
    "arrow-parens": "off",
    "no-console": "warn",
    "react/prop-types": "off",
    "react/destructuring-assignment": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "eol-last": "off"
  },
}
